<div class="ui card">
    [[+image:notempty=`
    <div class="image">
        <img src="[[+image]]" alt="[[+title]]">
    </div>
    `]]
    <div class="content">
        <div class="header">[[+title]]</div>
        <div class="meta">
            <span class="date">[[+date]]</span>
        </div>
        <div class="description">
            [[+description]]
        </div>
    </div>
    [[+link:notempty=`
    <div class="extra content">
        <a href="[[+link]]" class="ui button primary">
            [[+linkText:default=`Read More`]]
        </a>
    </div>
    `]]
</div>
